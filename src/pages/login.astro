---
import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabaseClient';
import { redirect } from 'astro/runtime/server';

let error = false;

if (Astro.request.method === 'POST') {
  const form = await Astro.request.formData();
  const email = form.get('email');
  const password = form.get('password');

  const { data, error: authError } = await supabase.auth.signInWithPassword({
    email,
    password
  });

  if (authError) {
    error = true;
  } else {
    const { session } = data;

    // Set auth cookie
    Astro.cookies.set('sb-access-token', session.access_token, {
      path: '/',
      httpOnly: true,
      maxAge: 60 * 60 * 12 // 12 ÏÏÎµÏ‚
    });

    Astro.cookies.set('sb-refresh-token', session.refresh_token, {
      path: '/',
      httpOnly: true,
      maxAge: 60 * 60 * 24 * 30 // 30 Î·Î¼Î­ÏÎµÏ‚
    });

    return redirect('/dashboard');
  }
}

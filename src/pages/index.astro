---
import Layout from "../layouts/Layout.astro";
import PuzzleOverlay from "../components/PuzzleOverlay.astro";
---

<Layout>
  <!-- Visual offset για να φανούν οι στέγες -->
  <div class="min-h-[10vh] bg-transparent"></div>

  <section class="flex flex-col justify-center items-center min-h-screen text-center bg-zinc-100 dark:bg-zinc-900 pt-20 pb-12">
    <h1 class="text-2xl sm:text-3xl font-semibold mb-8 text-zinc-800 dark:text-zinc-100">
      Choose your language
    </h1>
    <div class="flex gap-6">
      <a href="/en" class="px-6 py-3 rounded-md bg-black text-white hover:bg-zinc-700 transition">
        English
      </a>
      <a href="/el" class="px-6 py-3 rounded-md bg-black text-white hover:bg-zinc-700 transition">
        Ελληνικά
      </a>
    </div>
  </section>
  <PuzzleOverlay />
</Layout>
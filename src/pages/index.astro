---
import Layout from '../layouts/Layout.astro';
import ArticleCard from '../components/ArticleCard.jsx'; // ✅ σωστό
import { getCollection } from 'astro:content';

const lang = 'el';

const allArticles = await getCollection('articles');
const filteredArticles = allArticles.filter(
  (article) => article.data.published && article.data.lang === lang
);
---

<Layout title="Άρθρα | Hitlift" lang={lang}>
  <main class="max-w-6xl mx-auto px-4 py-16">
    <h1 class="text-3xl font-bold text-center mb-8">Άρθρα</h1>

    <section class="grid md:grid-cols-2 gap-8">
      {filteredArticles.map(({ data, slug }) => (
        <ArticleCard 
          title={data.title}
          excerpt={data.excerpt}
          image={data.image}
          href={`/${lang}/blog/${slug}`} 
        />
      ))}
    </section>
  </main>
</Layout>

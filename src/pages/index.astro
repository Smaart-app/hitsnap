---
import Layout from "../components/Layout.astro";
---

<Layout>
  <html lang="en">
    <head>
      <meta charset="UTF-8" />
      <title>Choose Language</title>
      <style>
        body {
          display: flex;
          flex-direction: column;
          justify-content: center;
          align-items: center;
          height: 100vh;
          font-family: sans-serif;
          background-color: #f0f0f0;
        }

        h1 {
          margin-bottom: 2rem;
        }

        .buttons {
          display: flex;
          gap: 2rem;
        }

        a {
          padding: 1rem 2rem;
          background: black;
          color: white;
          text-decoration: none;
          border-radius: 5px;
        }

        a:hover {
          background: #444;
        }
      </style>
    </head>
    <body>
      <h1>Choose your language</h1>
      <div class="buttons">
        <a href="/en">English</a>
        <a href="/el">Ελληνικά</a>
      </div>
    </body>
  </html>
</Layout>

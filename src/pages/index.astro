export const prerender = false;

const supportedLangs = ['el', 'en'];

// Fallback language
let lang = 'en';

if (Astro?.request?.headers) {
  const browserLang = Astro.request.headers.get('accept-language')?.split(',')[0]?.slice(0, 2);
  if (supportedLangs.includes(browserLang)) {
    lang = browserLang;
  }
}

Astro.redirect(`/${lang}`);

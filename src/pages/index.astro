---
const langFromStorage = "navigator" in globalThis ? (navigator.language || '').toLowerCase() : '';
const isGreek = langFromStorage.startsWith('el') || langFromStorage.includes('el-gr');
const lang = isGreek ? 'el' : 'en';
---

<html lang={lang}>
  <head>
    <title>Redirecting...</title>
    <meta http-equiv="refresh" content={`0; url=/${lang}`} />
    <script>
      // Extra safety for browsers that don't follow meta refresh
      const lang = (navigator.language || '').toLowerCase();
      if (lang.startsWith('el') || lang.includes('el-gr')) {
        window.location.href = '/el';
      } else {
        window.location.href = '/en';
      }
    </script>
  </head>
  <body style="background:#f4f3f0;text-align:center;padding:4rem;font-family:sans-serif">
    <h1>üîÅ Redirecting to your preferred language...</h1>
    <p>If you are not redirected, <a href={`/${lang}`}>click here</a>.</p>
  </body>
</html>

---
export const prerender = true;

export async function getStaticPaths() {
  return [
    { params: { lang: 'el' } },
    { params: { lang: 'en' } },
  ];
}

const { lang } = Astro.params;
const isGreek = lang === 'el';
---

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <title>{isGreek ? 'Αρχική | Hitlift' : 'Home | Hitlift'}</title>
  </head>
  <body style="font-family: sans-serif; padding: 2rem; text-align: center;">
    <h1>
      {isGreek
        ? '🏠 Καλώς ήρθες στη Hitlift — η έξυπνη άνοδος στο real estate!'
        : '🏠 Welcome to Hitlift — the smart rise in real estate!'}
    </h1>
    <p style="margin-top: 1rem;">
      <a href={`/${lang}/blog`} style="color: #50c7c2; text-decoration: underline;">
        {isGreek ? 'Προχώρησε στα άρθρα →' : 'Browse articles →'}
      </a>
    </p>
  </body>
</html>

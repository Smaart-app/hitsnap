---
import Layout from '../../layouts/Layout.astro';

export const prerender = false;

export async function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'nl' } },
    { params: { lang: 'el' } },
  ];
}

const { lang } = Astro.params;
const supportedLangs = ['en', 'nl', 'el'];

if (!lang || !supportedLangs.includes(lang)) {
  return Astro.redirect('/en', 302);
}

const title = "Moments. Framed.";
const subtitle = "Where stillness tells a story.";
---

<Layout title={title} lang={lang} user={null}>
  <section class="bg-black text-white py-20 px-6 min-h-screen flex flex-col items-center justify-center">
    <div class="text-center">
      <h1 class="text-4xl sm:text-5xl font-bold mb-4 leading-tight">
        <span class="text-white">Moments.</span> <span class="text-[#50c7c2]">Framed.</span>
      </h1>
      <p class="text-lg text-zinc-400 mb-8">
        Where stillness tells a story.
      </p>
      <a href={`/${lang}/blog`} class="bg-[#50c7c2] text-white px-6 py-3 rounded-full font-semibold shadow hover:bg-[#3db2b0] transition">
        Explore Gallery
      </a>
    </div>

    <div class="mt-12 max-w-md w-full">
      <img
        src="/assets/images/clown-preview.png"
        alt="HitSnap preview image"
        class="rounded-lg w-full h-auto object-contain"
      />
    </div>
  </section>
</Layout>

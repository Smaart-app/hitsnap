---
export const prerender = true;

export async function getStaticPaths() {
  return [
    { params: { lang: 'el' } },
    { params: { lang: 'en' } },
  ];
}

const { lang } = Astro.params;
---

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <title>Redirecting...</title>
    <meta http-equiv="refresh" content={`0; url=/${lang}/blog`} />
  </head>
  <body>
    <p>Redirecting to blog...</p>
  </body>
</html>

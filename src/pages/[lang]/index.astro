---
// Διόρθωση διαδρομών για να φορτώνει το Layout και το Hero σωστά
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';

export const prerender = false;

export async function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'nl' } },
    { params: { lang: 'el' } },
  ];
}

const { lang } = Astro.params;
const supportedLangs = ['en', 'nl', 'el'];

if (!lang || !supportedLangs.includes(lang)) {
  return Astro.redirect('/en', 302);
}

const title = lang === 'el' ? 'Στιγμές. Καδραρισμένες.' : 'Moments. Framed.';
---

<Layout title={title} lang={lang} user={null}>
  <Hero lang={lang} />
</Layout>

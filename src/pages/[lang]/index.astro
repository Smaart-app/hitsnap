---
import BackgroundSketch from '../components/BackgroundSketch.astro';

export const prerender = false;

const browserLang = typeof window !== 'undefined'
  ? window.navigator.language
  : 'en';

const htmlLang = browserLang.startsWith('el') ? 'el' : 'en';
const isGreek = htmlLang === 'el';
---

<html lang={htmlLang}>
  <head>
    <meta charset="UTF-8" />
    <title>{isGreek ? 'Hitlift | Η έξυπνη άνοδος στο real estate' : 'Hitlift | The smart rise in real estate'}</title>
    <style>
      body {
        font-family: 'Inter', sans-serif;
        background-color: #fdfdfc;
        margin: 0;
        padding: 0;
        position: relative;
        overflow-x: hidden;
      }
      main {
        position: relative;
        z-index: 1;
        text-align: center;
        padding: 10rem 2rem 4rem;
      }
      h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
      }
      p {
        font-size: 1.2rem;
        margin-bottom: 2rem;
      }
      .lang-links a {
        color: #50c7c2;
        font-weight: 600;
        margin: 0 1rem;
        text-decoration: none;
        font-size: 1.1rem;
      }
      .lang-links a:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <BackgroundSketch />

    <main>
      <h1>🏠 Hitlift</h1>
      <p>
        {isGreek
          ? 'Η έξυπνη άνοδος στο real estate, πέρα από το προφανές.'
          : 'The smart rise in real estate, beyond the obvious.'}
      </p>

      <div class="lang-links">
        <a href="/el/">🇬🇷 Ελληνικά</a>
        <a href="/en/">🇬🇧 English</a>
      </div>
    </main>
  </body>
</html>

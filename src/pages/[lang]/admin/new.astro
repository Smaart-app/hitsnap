        coverImagePreview.innerHTML = '';
      }
    }

    ['input', 'change'].forEach(event =>
      form.addEventListener(event, renderPreview, true)
    );

    renderPreview();

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

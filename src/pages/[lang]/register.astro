---
import Layout from '@layouts/Layout.astro';
import RegisterForm from '../../components/RegisterForm.jsx';

const lang = Astro.params?.lang || 'el';
---

<Layout title="🔐 Εγγραφή" lang={lang}>
  <main class="max-w-md mx-auto mt-24 p-6 bg-white rounded shadow">
    <h1 class="text-2xl font-bold mb-4">🔐 Δημιουργία λογαριασμού</h1>
    <RegisterForm lang={lang} client:load />
  </main>
</Layout>
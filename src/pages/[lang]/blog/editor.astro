---
import Layout from '../../../layouts/Layout.astro';

const lang = Astro.params.lang || 'el';
const isGreek = lang === 'el';
---

<Layout title="Δημιουργία Άρθρου | Hitlift" lang={lang}>
  <main class="max-w-3xl mx-auto bg-white shadow-md rounded-xl p-6 space-y-6">
    <a href={`/${lang}/blog`} class="inline-block text-sm text-[#50c7c2] hover:underline">← {isGreek ? 'Επιστροφή στα άρθρα' : 'Back to blog'}</a>

    <h1 class="text-2xl font-bold mb-4">{isGreek ? '📝 Δημιουργία Άρθρου' : '📝 Create New Article'}</h1>

    <form id="articleForm" class="space-y-4">
      <div>
        <label class="block mb-1 font-semibold">Slug (URL)</label>
        <input type="text" id="slug" class="w-full p-2 border rounded" placeholder="my-first-article" required />
      </div>

      <div>
        <label class="block mb-1 font-semibold">{isGreek ? 'Τίτλος' : 'Title'}</label>
        <input type="text" id="title" class="w-full p-2 border rounded" required />
      </div>

      <div>
        <label class="block mb-1 font-semibold">{isGreek ? 'Γλώσσα' : 'Language'}</label>
        <select id="lang" class="w-full p-2 border rounded" required>
          <option value="el">🇬🇷 Ελληνικά</option>
          <option value="en">🇬🇧 English</option>
          <option value="nl">🇳🇱 Nederlands</option>
          <option value="fr">🇫🇷 Français</option>
          <option value="de">🇩🇪 Deutsch</option>
        </select>
      </div>

      <div>
        <label class="block mb-1 font-semibold flex justify-between">
          {isGreek ? 'Απόσπασμα' : 'Excerpt'}
          <span id="excerptCount" class="text-sm text-gray-500">0/160</span>
        </label>
        <textarea id="excerpt" maxlength="160" rows="3" class="w-full p-2 border rounded" placeholder="Προαιρετικό απόσπασμα..."></textarea>
      </div>

      <div>
        <label class="block mb-1 font-semibold">{isGreek ? 'Πλήρες Κείμενο (Markdown)' : 'Full Text (Markdown)'}</label>
        <textarea id="content" rows="12" class="w-full p-2 border rounded font-mono text-sm" placeholder="Γράψε με Markdown..." required></textarea>
      </div>

      <div>
        <label class="block mb-1 font-semibold">Preview</label>
        <article id="preview" class="prose prose-zinc bg-zinc-50 p-4 rounded whitespace-pre-line"></article>
      </div>

      <div class="flex items-center justify-between gap-4">
        <div class="w-full">
          <label class="block mb-1 font-semibold">{isGreek ? 'Ημερομηνία Δημοσίευσης' : 'Publish Date'}</label>
          <input type="date" id="publish_date" class="w-full p-2 border rounded" />
        </div>

        <div class="w-full">
          <label class="block mb-1 font-semibold">{isGreek ? 'Δημοσιευμένο' : 'Published'}</label>
          <select id="published" class="w-full p-2 border rounded">
            <option value="true">{isGreek ? 'Ναι' : 'Yes'}</option>
            <option value="false" selected>{isGreek ? 'Όχι' : 'No'}</option>
          </select>
        </div>
      </div>

      <div>
        <label class="block mb-1 font-semibold">{isGreek ? 'Εικόνα Εξωφύλλου (URL)' : 'Cover Image (URL)'}</label>
        <input type="url" id="cover_image" class="w-full p-2 border rounded" />
      </div>

      <div class="flex justify-between items-center">
        <button type="submit" class="bg-[#50c7c2] text-white px-6 py-2 rounded hover:bg-[#3db2b0] transition font-semibold">
          {isGreek ? 'Αποθήκευση' : 'Save'}
        </button>

        <button type="button" id="translateBtn" class="text-sm text-[#50c7c2] hover:underline">
          {isGreek ? '➤ Μετάφρασε στα Αγγλικά' : '➤ Translate to Greek'}
        </button>
      </div>
    </form>

    <div id="output" class="text-sm text-zinc-700 whitespace-pre-wrap mt-6 hidden"></div>
  </main>

  <script src="/scripts/editor.js" type="module"></script>
</Layout>

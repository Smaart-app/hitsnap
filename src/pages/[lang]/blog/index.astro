---
import Layout from '../layouts/Layout.astro';
import ArticleCard from '../components/ArticleCard.jsx';
import { getCollection } from 'astro:content';

const { lang } = Astro.params;

const allArticles = await getCollection('articles');

const filteredArticles = allArticles.filter((article) => {
  const { published, publish_date, lang: articleLang } = article.data;
  const isPublished = published === true;
  const isVisible = new Date(publish_date) <= new Date();
  const matchesLang = articleLang === lang;
  return isPublished && isVisible && matchesLang;
});
---

<Layout title="Άρθρα | Hitlift" lang={lang}>
  <main class="max-w-6xl mx-auto px-4 py-16">
    <h1 class="text-3xl font-bold text-center mb-10">Άρθρα</h1>

    {filteredArticles.length > 0 ? (
      <section class="grid gap-12 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
        {filteredArticles.map(({ data, slug }) => (
          <ArticleCard
            title={data.title}
            excerpt={data.excerpt}
            image={data.image}
            href={`/${lang}/blog/${slug}`}
          />
        ))}
      </section>
    ) : (
      <p class="text-center text-gray-500 mt-12">
        Δεν υπάρχουν ακόμη άρθρα προς προβολή.
      </p>
    )}
  </main>
</Layout>

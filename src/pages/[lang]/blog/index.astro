---
import Layout from '../../../layouts/Layout.astro';
import ArticleCard from '../../../components/ArticleCard.jsx';
import { getCollection } from 'astro:content';

const lang = 'el';

const allArticles = await getCollection('articles');
const filteredArticles = allArticles.filter(
  (article) => article.data.published && article.data.lang === lang
);
---

<Layout title="Άρθρα | Hitlift" lang={lang}>
  <main class="max-w-6xl mx-auto px-4 py-16">
    <h1 class="text-3xl font-bold text-center mb-10">Άρθρα</h1>

    <section class="grid gap-12 grid-cols-1 md:grid-cols-2 lg:grid-cols-3 px-4">
      {filteredArticles.map(({ data, slug }) => (
        <ArticleCard
          title={data.title}
          excerpt={data.excerpt}
          image={data.image}
          href={`/${lang}/blog/${slug}`}
        />
      ))}
    </section>
  </main>
</Layout>

---
import Layout from '../../../layouts/Layout.astro';
import ArticleCard from '../../../components/ArticleCard.jsx';
import { createServerClient } from '@supabase/ssr';

const { lang } = Astro.params;

const supabase = createServerClient(
  import.meta.env.PUBLIC_SUPABASE_URL,
  import.meta.env.PUBLIC_SUPABASE_ANON_KEY,
  { cookies: Astro.cookies }
);

const { data: articles, error } = await supabase
  .from('articles')
  .select('*')
  .eq('lang', lang)
  .eq('published', true)
  .order('publish_date', { ascending: false });

// helper για αντίστροφη γλώσσα
function getAltLang(current) {
  if (current === 'el') return 'en';
  if (current === 'en') return 'el';
  return 'en';
}
---

<Layout title={lang === 'en' ? 'Articles | Hitlift' : 'Άρθρα | Hitlift'} lang={lang}>
  <main class="max-w-6xl mx-auto px-4 py-16">
    <h1 class="text-3xl font-bold text-center mb-10">
      {lang === 'en' ? 'Articles' : 'Άρθρα'}
    </h1>

    {articles && articles.length > 0 ? (
      <section class="grid gap-12 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
        {articles.map((article) => {
          const altLang = getAltLang(lang);
          const translatedSlug = article.slug.replace(`-${lang}`, `-${altLang}`);
          const hasTranslation = true; // μελλοντικά έλεγχος Supabase

          return (
            <div class="space-y-2">
              <ArticleCard
                title={article.title}
                excerpt={article.excerpt}
                image={article.cover_image}
                href={`/${lang}/blog/${article.slug}`}
              />
              {hasTranslation && (
                <p class="text-sm text-right">
                  <a
                    href={`/${altLang}/blog/${translatedSlug}`}
                    class="text-[#50c7c2] hover:underline"
                  >
                    {lang === 'el' ? 'Δες και στα Αγγλικά →' : 'View in Greek →'}
                  </a>
                </p>
              )}
            </div>
          );
        })}
      </section>
    ) : (
      <p class="text-center text-gray-500 mt-12">
        {lang === 'en'
          ? 'No articles available.'
          : 'Δεν υπάρχουν ακόμη άρθρα προς προβολή.'}
      </p>
    )}
  </main>
</Layout>

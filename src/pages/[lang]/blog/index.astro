---
import BackgroundSketch from '../../components/BackgroundSketch.astro';

export const prerender = true;

export async function getStaticPaths() {
  return [
    { params: { lang: 'el' } },
    { params: { lang: 'en' } },
  ];
}

const { lang } = Astro.params;

const pageTitle = lang === 'en'
  ? 'Hitlift | The smart rise in real estate'
  : 'Hitlift | Η έξυπνη άνοδος στα ακίνητα';

const pageDesc = lang === 'en'
  ? 'Select your language to explore Hitlift.'
  : 'Επίλεξε γλώσσα για να εξερευνήσεις τη Hitlift.';
---

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={pageDesc} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <main class="min-h-screen flex flex-col items-center justify-center text-center px-4">
      <BackgroundSketch />
      <h1 class="text-4xl font-bold mt-8 mb-4">{pageTitle}</h1>
      <p class="text-lg text-gray-600 mb-8">{pageDesc}</p>
      <div class="flex space-x-4">
        <a href="/el/" class="px-4 py-2 rounded bg-[#50c7c2] text-white hover:bg-[#3bbab3] transition">
          Ελληνικά
        </a>
        <a href="/en/" class="px-4 py-2 rounded bg-[#50c7c2] text-white hover:bg-[#3bbab3] transition">
          English
        </a>
      </div>
    </main>
  </body>
</html>

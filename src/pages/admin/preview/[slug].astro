const supabase = createServerClientWithCookies(Astro.cookies);

const {
  data: { user },
} = await supabase.auth.getUser();

let article = null;
let error = null;
let debugInfo = null;

if (user) {
  const { data, error: fetchError } = await supabase
    .from('articles')
    .select('*')

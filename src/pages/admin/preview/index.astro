---
import Layout from '../../../layouts/Layout.astro';
import { createServerClient } from '@supabase/ssr';

export const prerender = false;

const supabase = createServerClient(
  import.meta.env.PUBLIC_SUPABASE_URL,
  import.meta.env.PUBLIC_SUPABASE_ANON_KEY,
  {
    cookies: Astro.cookies,
  }
);

const { data: articles, error } = await supabase
  .from('articles')
  .select('*')
  .order('created_at', { ascending: false });

function getStatus(article) {
  if (!article?.published) return 'draft';
  if (new Date(article.publish_date) > new Date()) return 'scheduled';
  return 'published';
}
---

<Layout title="Προεπισκοπήσεις Άρθρων">
  <main class="max-w-6xl mx-auto px-4 py-16">
    <h1 class="text-2xl font-bold mb-8">📋 Όλα τα άρθρα</h1>

    {articles?.length === 0 ? (
      <p class="text-zinc-500 text-center">Δεν υπάρχουν άρθρα.</p>
    ) : (
      <div class="space-y-6">
        {articles.map((article) => (
          <div class="p-4 border rounded shadow-sm flex items-center justify-between">
            <div>
              <h2 class="text-lg font-semibold">{article.title}</h2>
              <p class="text-sm text-zinc-500">
                🗓️ {new Date(article.publish_date).toLocaleString('el-GR')} | 🏷️ {article.lang?.toUpperCase()} | 📌{' '}
                {getStatus(article) === 'draft' && '📝 Πρόχειρο'}
                {getStatus(article) === 'scheduled' && '⏳ Προγραμματισμένο'}
                {getStatus(article) === 'published' && '✅ Δημοσιευμένο'}
              </p>
            </div>
            <div class="flex gap-3">
              <a
                href={`/admin/preview/${article.slug}`}
                class="text-sm text-blue-600 hover:underline"
              >
                👁️ Προβολή
              </a>
              <a
                href={`/admin/editor?slug=${article.slug}`}
                class="text-sm text-green-600 hover:underline"
              >
                ✏️ Επεξεργασία
              </a>
            </div>
          </div>
        ))}
      </div>
    )}
  </main>
</Layout>

---
import Layout from '../layouts/Layout.astro';
import RegisterForm from '../components/editor/RegisterForm.jsx';

const lang = 'el';

const title = lang === 'el' 
  ? 'Εγγραφή | HitSnap' 
  : 'Register | HitSnap';

const description = lang === 'el'
  ? 'Δημιούργησε λογαριασμό για να διαχειρίζεσαι άρθρα και περιεχόμενο.'
  : 'Create an account to manage your content and articles.';
---

<Layout title={title} lang={lang} user={null}>
  <head slot="head">
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta name="robots" content="noindex" />
  </head>

  <section class="min-h-[60vh] flex items-center justify-center bg-white px-4 py-20">
    <div class="w-full max-w-md bg-white rounded-xl shadow p-6 border">
      <h1 class="text-2xl font-bold text-center mb-4">
        {lang === 'el' ? 'Δημιουργία Λογαριασμού' : 'Create Account'}
      </h1>
      <RegisterForm lang={lang} />
    </div>
  </section>
</Layout>
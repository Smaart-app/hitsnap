<Layout title={isGreek ? 'Î”Î·Î¼Î¹Î¿Ï…ÏÎ³Î¯Î± Î†ÏÎ¸ÏÎ¿Ï… | Hitlift' : 'Create Article | Hitlift'} lang={lang} user={user}>

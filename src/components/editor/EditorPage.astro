            class="w-full p-2 border rounded" 
            value={article?.title || ''} 
            required 
          />
        </div>

        <div>
          <label class="block mb-1 font-semibold">{isGreek ? 'Î“Î»ÏÏƒÏƒÎ±' : 'Language'}</label>
          <select name="lang" class="w-full p-2 border rounded" required>
            <option value="el" selected={article?.lang === 'el' || (!isEditMode && lang === 'el')}>ğŸ‡¬ğŸ‡· Î•Î»Î»Î·Î½Î¹ÎºÎ¬</option>
            <option value="en" selected={article?.lang === 'en' || (!isEditMode && lang === 'en')}>ğŸ‡¬ğŸ‡§ English</option>
            <option value="nl" selected={article?.lang === 'nl'}>ğŸ‡³ğŸ‡± Nederlands</option>
            <option value="fr" selected={article?.lang === 'fr'}>ğŸ‡«ğŸ‡· FranÃ§ais</option>
            <option value="de" selected={article?.lang === 'de'}>ğŸ‡©ğŸ‡ª Deutsch</option>
          </select>
        </div>

        <div>
          <label class="block mb-1 font-semibold">Translation of (article ID)</label>
          <input 
            type="text" 
            name="translation_of" 
            class="w-full p-2 border rounded" 
            placeholder="(Optional - link translations)" 
            value={article?.translation_of || ''} 
          />
        </div>

   <div>
  <label className="block mb-1 font-semibold">{isGreek ? 'Î‘Ï€ÏŒÏƒÏ€Î±ÏƒÎ¼Î±' : 'Excerpt'}</label>
  <textarea
    name="excerpt"
    maxLength={240}
    rows={5}
    className="w-full p-2 border rounded resize-y min-h-[80px]"
    placeholder={isGreek ? "Î ÏÎ¿Î±Î¹ÏÎµÏ„Î¹ÎºÏŒ Î±Ï€ÏŒÏƒÏ€Î±ÏƒÎ¼Î±â€¦" : "Optional excerptâ€¦"}
    style={{
      minHeight: "80px"
    }}
    onInput={e => {
      e.target.style.height = "auto";
      e.target.style.height = (e.target.scrollHeight) + "px";
    }}
    defaultValue={article?.excerpt || ''}
  />
</div>

        <div>
          <label class="block mb-1 font-semibold">{isGreek ? 'Î Î»Î®ÏÎµÏ‚ ÎšÎµÎ¯Î¼ÎµÎ½Î¿ (Markdown)' : 'Full Text (Markdown)'}</label>
          <textarea 
            name="content" 
            id="markdownInput" 
            rows="12" 
            class="w-full p-2 border rounded font-mono text-sm" 
            placeholder="Write using Markdown..." 
            required
          >{article?.content || ''}</textarea>
        </div>

        <div>
          <label class="block mb-1 font-semibold">{isGreek ? 'Î•Î¹ÎºÏŒÎ½Î± Î•Î¾Ï‰Ï†ÏÎ»Î»Î¿Ï… (URL)' : 'Cover Image (URL)'}</label>
          <input 
            type="text"
            name="cover_image" 
            class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#50c7c2] focus:border-transparent" 
            placeholder="https://example.com/image.jpg"
            value={article?.cover_image || ''} 
          />
          <p class="text-xs text-gray-500 mt-1">
            {isGreek ? 'Î ÏÎ¿ÏƒÎ¸Î­ÏƒÏ„Îµ Ï„Î¿ URL Î¼Î¹Î±Ï‚ ÎµÎ¹ÎºÏŒÎ½Î±Ï‚ Î³Î¹Î± Ï„Î¿ ÎµÎ¾ÏÏ†Ï…Î»Î»Î¿ Ï„Î¿Ï… Î¬ÏÎ¸ÏÎ¿Ï…' : 'Add an image URL for the article cover'}
          </p>
        </div>
        <div class="flex items-center justify-between gap-4">
          <div class="w-full">
            <label class="block mb-1 font-semibold">{isGreek ? 'Î—Î¼ÎµÏÎ¿Î¼Î·Î½Î¯Î± ÎºÎ±Î¹ ÎÏÎ± Î”Î·Î¼Î¿ÏƒÎ¯ÎµÏ…ÏƒÎ·Ï‚' : 'Publish Date & Time'}</label>
            <input 
              type="datetime-local" 
              name="publish_date" 
              class="w-full p-2 border rounded" 
              value={defaultDateTime}
            />
          </div>
          <div class="w-full">
            <label class="block mb-1 font-semibold">{isGreek ? 'Î”Î·Î¼Î¿ÏƒÎ¹ÎµÏ…Î¼Î­Î½Î¿' : 'Published'}</label>
            <select name="published" class="w-full p-2 border rounded">
              <option value="true" selected={article?.published === true || (!isEditMode && true)}>{isGreek ? 'ÎÎ±Î¹' : 'Yes'}</option>
              <option value="false" selected={article?.published === false}>{isGreek ? 'ÎŒÏ‡Î¹' : 'No'}</option>
            </select>
          </div>
        </div>

        {isEditMode && article && (
          <div class="bg-gray-50 p-3 rounded text-sm text-gray-600 space-y-1">
            <div><strong>{isGreek ? 'Î”Î·Î¼Î¹Î¿Ï…ÏÎ³Î®Î¸Î·ÎºÎµ:' : 'Created:'}</strong> {new Date(article.created_at).toLocaleString()}</div>
            {article.updated_at && (
              <div><strong>{isGreek ? 'Î¤ÎµÎ»ÎµÏ…Ï„Î±Î¯Î± ÎµÎ½Î·Î¼Î­ÏÏ‰ÏƒÎ·:' : 'Last updated:'}</strong> {new Date(article.updated_at).toLocaleString()}</div>
            )}
          </div>
        )}

        <div class="flex justify-between items-center mt-4">
          <button type="submit" class="bg-[#50c7c2] text-white px-6 py-2 rounded hover:bg-[#3db2b0] transition font-semibold">
            {isEditMode ? (isGreek ? 'Î•Î½Î·Î¼Î­ÏÏ‰ÏƒÎ·' : 'Update') : (isGreek ? 'Î‘Ï€Î¿Î¸Î®ÎºÎµÏ…ÏƒÎ·' : 'Save')}
          </button>
          <button type="button" id="translateBtn" class="text-sm text-[#50c7c2] hover:underline">
            {isGreek ? 'â¤ ÎœÎµÏ„Î¬Ï†ÏÎ±ÏƒÎµ ÏƒÏ„Î± Î‘Î³Î³Î»Î¹ÎºÎ¬' : 'â¤ Translate to Greek'}
          </button>
        </div>
      </form>

      <section class="prose prose-zinc dark:prose-invert max-w-none p-4 border rounded shadow-sm overflow-auto max-h-[800px]">
        <h2 class="text-xl font-bold mb-4">{isGreek ? 'Î ÏÎ¿ÎµÏ€Î¹ÏƒÎºÏŒÏ€Î·ÏƒÎ·' : 'Preview'}</h2>
        
        <div id="previewImageContainer" class="mb-4 rounded shadow overflow-hidden"></div>
        <div>
          <h3 id="previewTitle" class="mb-1 text-2xl font-bold"></h3>
          <div class="mb-2 flex gap-4 text-sm text-zinc-500">
            <span id="previewDate"></span>
            <span id="previewLang"></span>
          </div>
          <p id="previewExcerpt" class="mb-4 text-base text-zinc-600"></p>
        </div>
        <div id="markdownPreview" class="prose prose-zinc dark:prose-invert max-w-none"></div>
        <div id="translationPreview" class="mt-8 border-t pt-4 hidden">
          <h3 class="font-semibold mb-2">{isGreek ? 'Î‘Î³Î³Î»Î¹ÎºÎ® ÎœÎµÏ„Î¬Ï†ÏÎ±ÏƒÎ·' : 'English Translation'}</h3>
          <div id="translatedMarkdown" class="prose prose-zinc dark:prose-invert max-w-none"></div>
        </div>
      </section>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
  <script type="module" define:vars={{ isEditMode, isGreek }}>
    const form = document.getElementById('articleForm');
    const feedback = document.getElementById('feedback');
    const input = document.getElementById('markdownInput');
    const preview = document.getElementById('markdownPreview');
    const previewImageContainer = document.getElementById('previewImageContainer');
    const previewTitle = document.getElementById('previewTitle');
    const previewDate = document.getElementById('previewDate');
    const previewLang = document.getElementById('previewLang');
    const previewExcerpt = document.getElementById('previewExcerpt');
    const translatedContainer = document.getElementById('translationPreview');
    const translatedMarkdown = document.getElementById('translatedMarkdown');
    const statusIndicator = document.getElementById('statusIndicator');

    // Track ALL form fields for comprehensive autosave
    const fieldsToTrack = [
      'slug', 'title', 'excerpt', 'content', 'cover_image', 
      'publish_date', 'lang', 'translation_of', 'published'
    ];
    let lastSavedData = {};
    let idleTimer;

    // Î Î»Î®ÏÎµÏ‚ state Ï„Î¿Ï… preview Î¼Îµ ÏŒÎ»Î± Ï„Î± Ï€ÎµÎ´Î¯Î± (real time!)
    let livePreviewData = {};

    const statusTexts = {
      draft: isGreek ? 'ğŸ“ Î ÏÎ¿ÏƒÏ‡Î­Î´Î¹Î¿' : 'ğŸ“ Draft',
      scheduled: isGreek ? 'â° Î ÏÎ¿Î³ÏÎ±Î¼Î¼Î±Ï„Î¹ÏƒÎ¼Î­Î½Î¿' : 'â° Scheduled', 
      published: isGreek ? 'âœ… Î”Î·Î¼Î¿ÏƒÎ¹ÎµÏ…Î¼Î­Î½Î¿' : 'âœ… Published'
    };

    // Î–Ï‰Î½Ï„Î±Î½Î® Ï€ÏÎ¿ÎµÏ€Î¹ÏƒÎºÏŒÏ€Î·ÏƒÎ· ÏŒÎ»Ï‰Î½ Ï„Ï‰Î½ Ï€ÎµÎ´Î¯Ï‰Î½
    const renderPreview = () => {
      const coverImageUrl = form.cover_image?.value?.trim();
      const title = form.title?.value?.trim() || 'â€”';
      const excerpt = form.excerpt?.value?.trim() || '';
      const lang = form.lang?.value?.toUpperCase() || '';
      const dateValue = form.publish_date?.value;
      const content = form.content?.value || '';
      // Set live state
      livePreviewData = {
        title, excerpt, lang, coverImageUrl, dateValue, content
      };

      // Î•Î¹ÎºÏŒÎ½Î±
      if (coverImageUrl) {
        previewImageContainer.innerHTML = `
          <img src="${coverImageUrl}" 
               alt="Cover Image" 
               class="w-full max-h-64 object-cover rounded" 
               onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
          <div class="text-red-500 text-sm p-2 bg-red-50 rounded hidden">
            ${isGreek ? 'âš ï¸ Î— ÎµÎ¹ÎºÏŒÎ½Î± Î´ÎµÎ½ Î¼Ï€ÏŒÏÎµÏƒÎµ Î½Î± Ï†Î¿ÏÏ„Ï‰Î¸ÎµÎ¯' : 'âš ï¸ Image failed to load'}
          </div>
        `;
      } else {
        previewImageContainer.innerHTML = `
          <div class="text-gray-400 text-sm p-4 bg-gray-50 rounded text-center border-2 border-dashed">
            ${isGreek ? 'ğŸ“· Î ÏÎ¿ÏƒÎ¸Î­ÏƒÏ„Îµ URL ÎµÎ¹ÎºÏŒÎ½Î±Ï‚ Î³Î¹Î± Ï€ÏÎ¿ÎµÏ€Î¹ÏƒÎºÏŒÏ€Î·ÏƒÎ·' : 'ğŸ“· Add image URL for preview'}
          </div>
        `;
      }

      // Î¤Î¯Ï„Î»Î¿Ï‚
      previewTitle.textContent = title;

      // Excerpt
      previewExcerpt.textContent = excerpt;

      // Î—Î¼ÎµÏÎ¿Î¼Î·Î½Î¯Î±
      if (dateValue) {
        const d = new Date(dateValue);
        previewDate.textContent = d.toLocaleString('el-GR');
      } else {
        previewDate.textContent = '';
      }
      // Î“Î»ÏÏƒÏƒÎ±
      previewLang.textContent = lang ? `ğŸŒ ${lang}` : '';

      // Markdown Ï€ÎµÏÎ¹ÎµÏ‡ÏŒÎ¼ÎµÎ½Î¿
      if (content.trim()) {
        preview.innerHTML = marked.parse(content);
      } else {
        preview.innerHTML = `<p class="text-gray-400 italic">${isGreek ? 'Î“ÏÎ¬ÏˆÏ„Îµ ÎºÎ¬Ï„Î¹ Î³Î¹Î± Î½Î± Î´ÎµÎ¯Ï„Îµ Ï„Î·Î½ Ï€ÏÎ¿ÎµÏ€Î¹ÏƒÎºÏŒÏ€Î·ÏƒÎ·...' : 'Write something to see the preview...'}</p>`;
      }
    };
    const updateStatusIndicator = () => {
      const publishDate = new Date(form.publish_date?.value);
      const isPublished = form.published?.value === 'true';
      const now = new Date();
      
      let status, className;
      
      if (!isPublished) {
        status = statusTexts.draft;
        className = 'bg-yellow-100 text-yellow-800 border-yellow-300';
      } else if (publishDate > now) {
        status = statusTexts.scheduled;
        className = 'bg-blue-100 text-blue-800 border-blue-300';
      } else {
        status = statusTexts.published;
        className = 'bg-green-100 text-green-800 border-green-300';
      }
      
      statusIndicator.textContent = status;
      statusIndicator.className = `px-3 py-1 rounded-full text-sm font-medium border ${className}`;
    };

    const getCurrentData = () => {
      const formData = new FormData(form);
      const data = Object.fromEntries(formData);
      data.published = data.published === 'true';
      data.translation_of = data.translation_of?.trim() || null;
      data.publish_date = data.publish_date || null;
      data.cover_image = data.cover_image?.trim() || null;
      data.excerpt = data.excerpt?.trim() || null;
      if (isEditMode) {
        data.isEdit = true;
        data.id = formData.get('id');
      }
      return data;
    };

    const autosave = async () => {
      if (!hasChanged()) return;
      const data = getCurrentData();
      data.draft = true;

      try {
        const endpoint = isEditMode ? '/api/update-article' : '/api/save-article';
        const res = await fetch(endpoint, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });
        if (!res.ok) throw new Error(`HTTP ${res.status}`);
        const result = await res.json();
        if (!result.error) {
          lastSavedData = fieldsToTrack.reduce((acc, key) => {
            acc[key] = data[key];
            return acc;
          }, {});
          const now = new Date().toLocaleTimeString();
          feedback.innerHTML = `<div class="text-xs text-zinc-500 mt-2">ğŸ’¾ ${isGreek ? 'Î‘Ï…Ï„ÏŒÎ¼Î±Ï„Î· Î±Ï€Î¿Î¸Î®ÎºÎµÏ…ÏƒÎ· ÏƒÏ„Î¹Ï‚' : 'Autosaved at'} ${now}</div>`;
        } else {
          console.warn('Autosave error:', result.error);
        }
      } catch (err) {
        console.warn('Autosave failed:', err);
        feedback.innerHTML = `<div class="text-xs text-red-500 mt-2">âš ï¸ ${isGreek ? 'Î‘Ï€Î¿Ï„Ï…Ï‡Î¯Î± Î±Ï…Ï„ÏŒÎ¼Î±Ï„Î·Ï‚ Î±Ï€Î¿Î¸Î®ÎºÎµÏ…ÏƒÎ·Ï‚' : 'Autosave failed'}</div>`;
      }
    };

    const hasChanged = () => {
      const current = getCurrentData();
      return fieldsToTrack.some(field => {
        const currentValue = current[field];
        const savedValue = lastSavedData[field];
        if (!currentValue && !savedValue) return false;
        if (!currentValue || !savedValue) return true;
        return currentValue !== savedValue;
      });
    };

    const resetIdleTimer = () => {
      clearTimeout(idleTimer);
      idleTimer = setTimeout(autosave, 5000);
    };

    // Î•Î½Î·Î¼Î­ÏÏ‰ÏƒÎ· preview ÏƒÎµ ÎŸÎ›Î‘ Ï„Î± Ï€ÎµÎ´Î¯Î± live
    const setupEventListeners = () => {
      document.querySelectorAll('#articleForm input, #articleForm textarea, #articleForm select').forEach((el) => {
        el.addEventListener('input', () => {
          renderPreview();
          resetIdleTimer();
        });
        el.addEventListener('change', () => {
          renderPreview();
          resetIdleTimer();
        });
      });
      // Î•Î¹Î´Î¹ÎºÎ¬: Î±Î»Î»Î±Î³Î® Î·Î¼ÎµÏÎ¿Î¼Î·Î½Î¯Î±Ï‚ Î® Î´Î·Î¼Î¿ÏƒÎ¹ÎµÏ…Î¼Î­Î½Î¿Ï… â†’ ÎµÎ½Î·Î¼Î­ÏÏ‰ÏƒÎ· status
      form.querySelector('[name="publish_date"]')?.addEventListener('change', updateStatusIndicator);
      form.querySelector('[name="published"]')?.addEventListener('change', updateStatusIndicator);
    };

    setInterval(autosave, 30000);

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const submitData = getCurrentData();
      delete submitData.draft;
      try {
        const endpoint = isEditMode ? '/api/update-article' : '/api/save-article';
        const res = await fetch(endpoint, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(submitData)
        });
        if (!res.ok) throw new Error(`HTTP ${res.status}`);
        const result = await res.json();
        const successMessage = isEditMode 
          ? (isGreek ? 'âœ… Î¤Î¿ Î¬ÏÎ¸ÏÎ¿ ÎµÎ½Î·Î¼ÎµÏÏÎ¸Î·ÎºÎµ ÎµÏ€Î¹Ï„Ï…Ï‡ÏÏ‚!' : 'âœ… Article updated successfully!')
          : (isGreek ? 'âœ… Î¤Î¿ Î¬ÏÎ¸ÏÎ¿ Î±Ï€Î¿Î¸Î·ÎºÎµÏÏ„Î·ÎºÎµ ÎµÏ€Î¹Ï„Ï…Ï‡ÏÏ‚!' : 'âœ… Article saved successfully!');
        feedback.innerHTML = `<div class="p-3 rounded font-semibold mb-6 ${result.error ? 'bg-red-100 text-red-700' : 'bg-green-100 text-green-700'}">
          ${result.error ? `âŒ ${result.error}` : successMessage}
        </div>`;
        updateStatusIndicator();
        if (!result.error && result.article) {
          setTimeout(() => {
            window.location.href = `/${result.article.lang}/blog/${result.article.slug}`;
          }, 1500);
        }
      } catch (err) {
        console.error('Submission error:', err);
        const errorMessage = isGreek ? 'âŒ Î ÏÎ¿Î­ÎºÏ…ÏˆÎµ Î±Ï€ÏÎ¿ÏƒÎ´ÏŒÎºÎ·Ï„Î¿ ÏƒÏ†Î¬Î»Î¼Î±' : 'âŒ Unexpected error occurred';
        feedback.innerHTML = `<div class="p-3 rounded font-semibold mb-6 bg-red-100 text-red-700">
          ${errorMessage}
        </div>`;
      }
    });

    document.getElementById('translateBtn')?.addEventListener('click', async () => {
      const translateData = getCurrentData();
      try {
        const translatingMessage = isGreek ? 'ğŸ”„ ÎœÎµÏ„Î±Ï†ÏÎ¬Î¶ÎµÏ„Î±Î¹...' : 'ğŸ”„ Translating...';
        feedback.innerHTML = `<div class="text-xs text-blue-500 mt-2">${translatingMessage}</div>`;
        const res = await fetch('/api/translate-article', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(translateData)
        });
        if (!res.ok) throw new Error(`HTTP ${res.status}`);
        const result = await res.json();
        if (!result.error && result.translated) {
          translatedContainer.classList.remove('hidden');
          translatedMarkdown.innerHTML = marked.parse(result.translated);
          const successMessage = isGreek ? 'âœ… Î— Î¼ÎµÏ„Î¬Ï†ÏÎ±ÏƒÎ· Î¿Î»Î¿ÎºÎ»Î·ÏÏÎ¸Î·ÎºÎµ' : 'âœ… Translation completed';
          feedback.innerHTML = `<div class="text-xs text-green-500 mt-2">${successMessage}</div>`;
        } else {
          throw new Error(result.error || 'Translation failed');
        }
      } catch (err) {
        console.error('Translation error:', err);
        const errorMessage = isGreek ? 'âŒ Î— Î¼ÎµÏ„Î¬Ï†ÏÎ±ÏƒÎ· Î±Ï€Î­Ï„Ï…Ï‡Îµ.' : 'âŒ Translation failed.';
        translatedMarkdown.innerHTML = `<p class="text-red-600">${errorMessage}</p>`;
        translatedContainer.classList.remove('hidden');
        const feedbackMessage = isGreek ? 'âŒ Î— Î¼ÎµÏ„Î¬Ï†ÏÎ±ÏƒÎ· Î±Ï€Î­Ï„Ï…Ï‡Îµ' : 'âŒ Translation failed';
        feedback.innerHTML = `<div class="text-xs text-red-500 mt-2">${feedbackMessage}</div>`;
      }
    });

    // Init & first render
    const initializeData = () => {
      const currentData = getCurrentData();
      lastSavedData = fieldsToTrack.reduce((acc, key) => {
        acc[key] = currentData[key];
        return acc;
      }, {});
    };

    initializeData();
    setupEventListeners();
    renderPreview();
    updateStatusIndicator();
  </script>
</Layout>

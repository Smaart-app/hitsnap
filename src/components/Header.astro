      <a href={`${base}/blog`} class={`px-2 py-1 rounded-sm transition hover:bg-zinc-100 dark:hover:bg-zinc-800 ${isArticles ? 'text-[#50c7c2] font-bold' : 'hover:text-[#50c7c2]'}`}>{isGreek ? 'Î†ÏÎ¸ÏÎ±' : 'Articles'}</a>
      <a href={`${base}/contact`} class={`px-2 py-1 rounded-sm transition hover:bg-zinc-100 dark:hover:bg-zinc-800 ${isContact ? 'text-[#50c7c2] font-bold' : 'hover:text-[#50c7c2]'}`}>{isGreek ? 'Î•Ï€Î¹ÎºÎ¿Î¹Î½Ï‰Î½Î¯Î±' : 'Contact'}</a>
      {!disableLangSwitch && (
        <a href={langSwitchHref} class="px-2 py-1 rounded-sm hover:bg-zinc-100 dark:hover:bg-zinc-800 transition hover:text-[#50c7c2]">
          <span class="inline-flex items-center gap-1.5">
            <span>{isGreek ? 'English' : 'Î•Î»Î»Î·Î½Î¹ÎºÎ¬'}</span>
            <span class="flag-emoji">{isGreek ? 'ğŸ‡¬ğŸ‡§' : 'ğŸ‡¬ğŸ‡·'}</span>
          </span>
        </a>
      )}

      {isAdmin && (
        <>
          <a href={`/${lang}/admin/preview`} class={`px-2 py-1 rounded transition ${isArticleList ? 'bg-[#50c7c2]/10 font-bold text-[#50c7c2]' : 'hover:bg-[#50c7c2]/10'}`}>Î›Î¯ÏƒÏ„Î± Î¬ÏÎ¸ÏÏ‰Î½</a>
          <a href={`/${lang}/admin/new`} class={`px-2 py-1 rounded transition ${isNewArticle ? 'bg-[#50c7c2]/10 font-bold text-[#50c7c2]' : 'hover:bg-[#50c7c2]/10'}`}>ÎÎ­Î¿ Î¬ÏÎ¸ÏÎ¿</a>
          {slug && (
            <>
              <a href={`/${lang}/admin/preview/${slug}`} class={`px-2 py-1 rounded transition ${isPreview ? 'bg-[#50c7c2]/10 font-bold text-[#50c7c2]' : 'hover:bg-[#50c7c2]/10'}`}>Î ÏÎ¿ÎµÏ€Î¹ÏƒÎºÏŒÏ€Î·ÏƒÎ·</a>
              <a href={`/${lang}/admin/edit/${slug}`} class={`px-2 py-1 rounded transition ${isEditor ? 'bg-[#50c7c2]/10 font-bold text-[#50c7c2]' : 'hover:bg-[#50c7c2]/10'}`}>Î•Ï€ÎµÎ¾ÎµÏÎ³Î±ÏƒÎ¯Î±</a>
            </>
          )}
        </>
      )}

      <ThemeButton client:only="react" />
      <UserStatus lang={lang} client:load />

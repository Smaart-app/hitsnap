---
import { siteConfig } from '@/content/config';
---

<footer class="w-full border-t border-zinc-200 dark:border-zinc-800 text-center py-6 text-sm text-zinc-600 dark:text-zinc-400">
  <img src="/logo.png" alt="SMAart logo" class="mx-auto h-8 mb-3" />

  <p class="italic text-sm text-center text-gray-700 mb-2">
    {siteConfig.siteTagline}
  </p>

  <p class="text-sm text-center text-gray-600">
    © {siteConfig.year} {siteConfig.brandName} — All rights reserved.
    <br />
    <span class="text-sm font-medium text-gray-500">
      Signed as {siteConfig.signature}
    </span>
  </p>
</footer>

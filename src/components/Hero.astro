---
/**
 * Hero.astro — καθαρό component (χωρίς <html>/<body>).
 * Χρήση:
 *   import Hero from '../../components/Hero.astro'
 *   <Hero lang={safeLang} />
 */
const lang = Astro.props?.lang ?? 'en';

const title = lang === 'el' ? 'Στιγμές. Καδραρισμένες.' : 'Moments. Framed.';
const subtitle = lang === 'el' ? 'Όπου η ακινησία λέει μια ιστορία.' : 'Where stillness tells a story.';

// → Στέλνουμε στο /{lang}/gallery (όχι στο blog)
const ctaHref = `/${lang}/gallery`;
const ctaText = lang === 'el' ? 'Δες το Gallery' : 'Explore Gallery';

// Προσαρμόζεις την εικόνα σου εδώ:
const imageSrc = '/article-images/pierrot-moment-snap.png';
---

<section class="w-full max-h-[900px] grid grid-cols-1 md:grid-cols-2 items-stretch relative overflow-hidden">
  <!-- Αριστερή στήλη -->
  <div class="flex flex-col h-full px-4 md:px-10">
    <div class="pt-12 md:pt-28 flex flex-col">
      <div class="space-y-5">
        <h1 class="text-4xl md:text-5xl font-bold tracking-tight text-white leading-tight">
          {title.split(' ')[0]} <span class="text-[#50c7c2]">{title.split(' ')[1]}</span>
        </h1>
        <p class="text-lg text-zinc-400 italic">
          {subtitle}
        </p>
        <a
          href={ctaHref}
          class="inline-block bg-[#50c7c2] text-white px-6 py-3 rounded-full text-sm font-medium hover:opacity-90 transition"
        >
          {ctaText}
        </a>
      </div>
    </div>
  </div>

  <!-- Δεξιά στήλη: Εικόνα -->
  <div class="w-full h-full flex items-center justify-end bg-black relative overflow-hidden pr-4 md:pr-10">
    <img
      src={imageSrc}
      alt="HitSnap preview"
      class="object-contain h-[90%] w-auto max-h-[650px] block ml-auto"
      loading="eager"
    />
  </div>
</section>

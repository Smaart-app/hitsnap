{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/config": ["src/content/config.ts"],
      "@lib/*": ["src/lib/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "astro:content": ["./.astro/types/content.d.ts"]
    },
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true
  },
  "include": ["src", "src/lib/createBrowserClient.js"],
  "exclude": ["scripts"]
}
